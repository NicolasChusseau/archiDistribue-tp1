{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "List": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "Item#"
          }
        },
        "status": {
          "type": "string",
          "enum": [
            "todo",
            "done"
          ]
        }
      },
      "required": [
        "id",
        "name",
        "status"
      ],
      "additionalProperties": false
    },
    "Item": {
      "type": "object",
      "properties": {
        "assignedTo": {
          "type": "array",
          "items": {
            "$ref": "User#"
          }
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "todo",
            "done"
          ]
        }
      },
      "required": [
        "id",
        "name",
        "status"
      ],
      "additionalProperties": false
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "Item#"
          }
        }
      },
      "required": [
        "id",
        "name"
      ],
      "additionalProperties": false
    }
  }
}